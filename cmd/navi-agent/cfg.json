{
  // server 相关配置
  "server": {
    // server 服务节点
    "server_hosts": "192.168.1.208:8000",
    "server_type": "http",
    "server_mode": "prod",
    "server_http_api_json_file": "httpapi.json",
    "server_name": "smart_customer_service",
    "server_restart_script": "./server_restart.sh",
    "is_docker": false
  },
  "prometheus_target": {
    "host": "192.168.1.16",
    "port": "9100"
  },
  // zk 相关配置
  "zookeeper": {
    // zk 服务节点
    "zookeeper_hosts": "127.0.0.1:2181",
    // zk 服务发现监听节点
    "zookeeper_rpc_service_path": "/navi/rpcservice",
    "zookeeper_url_service_path": "/navi/service",
    "zookeeper_http_service_path": "/navi/httpservice"
  },
  // log 日志相关配置
  "log": {
    // 开启日志文件
    "enable": true,
    // 日志文件路径
    "file": "/rpc/logs/agent.log",
    // 日志等级
    // Fatal:0, Error:1, Alert:2, Warn:3,
    // Notice:4, Info:5, Debug:6, Trace:7
    "level": 6,
    // 异步日志
    "async": false,
    // 日志等级配色
    "coloured": true,
    // 日志显示行号
    "show_lines": true,
    // 日志最大行数
    "maxlines": 5000000,
    // 日志最大容量
    "maxsize": 536870912,
    // 日志隔天回滚
    "daily": true,
    // 保存日志最大天数
    "maxdays": 15
  }
}
